{
    "name": "bubblewrap",
    "type": "c",
    "version": "0.7.0",

    "build": {
        "dependency": { "pip": ["meson"] },
        "script": [
            "[ -d 'bubblewrap' ] || git clone https://github.com/containers/bubblewrap --depth=1 --branch=v0.7.0",
            "<apply the patch>",
            "mkdir -p bubblewrap/build",
            "(cd bubblewrap; meson setup build)",
            "(cd bubblewrap; meson compile -C build)"
        ],
        "output": [
            "bubblewrap/build/libbwrap.so@libbwrap.so"
        ]
    },

    "clean": [
        "bubblewrap/build"
    ],

    "metadata": {}
}